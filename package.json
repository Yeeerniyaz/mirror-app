{
  "name": "vector-standalone",
  "version": "2.0.117",
  "description": "Smart Mirror VECTOR Offline Standalone App",
  "author": "Yerniyaz",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder --linux --arm64 -p always",
    "deploy": "node deploy.cjs",
    "deploy:pi": "node deploy-local.cjs"
  },
  "dependencies": {
    "@mantine/core": "^7.0.0",
    "@mantine/dates": "^7.17.8",
    "@mantine/hooks": "^7.0.0",
    "@tabler/icons-react": "^3.36.1",
    "dayjs": "^1.11.19",
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7",
    "lucide-react": "^0.563.0",
    "mqtt": "^5.14.1",
    "node-fetch": "^3.3.2",
    "qrcode.react": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "vite": "^4.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "kz.yeee.vector",
    "asar": true,
    "productName": "VectorMirror",
    "directories": {
      "output": "dist-electron"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://updater.yeee.kz/"
      }
    ],
    "extraResources": [],
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "executableName": "vector-mirror"
    }
  }
}
